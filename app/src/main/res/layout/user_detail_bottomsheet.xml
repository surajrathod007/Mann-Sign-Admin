<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="24dp"
    android:elevation="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        <ImageView
            android:layout_marginTop="8dp"
            android:src="@drawable/bottomsheet_bar"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="14dp"
                android:text="Customer Details"
                android:textColor="@color/title_text_color"
                android:fontFamily="@font/satoshi_bold"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btnCloseUserProfile"
                android:clickable="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_marginRight="14dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.divider.MaterialDivider
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgUserProfile"
            android:layout_marginTop="10dp"
            android:src="@drawable/bottomsheet_background"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/txtUserName"
            android:text="Suraj Rathod"
            android:gravity="center"
            android:fontFamily="@font/satoshi_medium"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtUserEmail"
            android:text="surajsinhrathod75@gmail.com"
            android:gravity="center"
            android:fontFamily="@font/satoshi_medium"
            android:textSize="12sp"
            android:textColor="@color/text_normal_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <GridLayout
            android:background="@drawable/gridlayout_background"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone Number : "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:id="@+id/txtUserPhoneNumber"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Address : "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:id="@+id/txtUserAddress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pin Code : "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:id="@+id/txtUserPinCode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Recieved Orders : "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:id="@+id/txtUserOrders"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Account Created: "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:id="@+id/tvCreatedOn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="Not available"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Profile Updated: "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                />

            <TextView
                android:text="Not available"
                android:id="@+id/tvpu"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="lo: "
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/title_text_color"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvlo"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="@color/text_normal_color"
                />

        </GridLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>