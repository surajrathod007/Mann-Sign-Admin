<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragments.DashboardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottomsheet_background"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginVertical="16dp"
            android:text="Management"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/title_text_color"
            android:fontFamily="@font/satoshi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/btnProductManagement"
            layout="@layout/management_menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvOrders"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="16dp"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/padding_medium"
            android:background="?android:attr/listDivider" />

        <include
            android:id="@+id/btnCategoryManagement"
            layout="@layout/management_menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvOrders"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/padding_medium"
            android:background="?android:attr/listDivider" />

        <include
            android:id="@+id/btnPriceManagement"
            layout="@layout/management_menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvOrders"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/padding_medium"
            android:background="?android:attr/listDivider" />

        <include
            android:id="@+id/btnResManagement"
            layout="@layout/management_menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvOrders"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"/>


    </LinearLayout>

</LinearLayout>